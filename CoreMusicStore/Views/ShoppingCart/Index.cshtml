@model ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}
@section scripts {
    <script asp-append-version="true" src="@Url.Content("~/Scripts/shoppingcart.js")" type="text/javascript"></script>
}
<h3>
    <em>Review</em> your cart:
</h3>
<p class="button">
    <a asp-action="AddressAndPayment" asp-controller="Checkout">Checkout >></a>
</p>
<div id="update-message">
</div>
<table>
    <tr>
        <th>
            Album Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr id="row-@item.Id">
            <td>
                <a asp-action="Details" asp-controller="Store" asp-route-id="@item.Album.Id">@item.Album.Title</a>
            </td>
            <td>
                @item.Album.Price
            </td>
            <td id="item-count-@item.Id">
                @item.Count
            </td>
            <td>
                <a href="#" class="RemoveLink" data-id="@item.Id">Remove from cart</a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
    </tr>
</table>