@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<h2>Change Password</h2>
<p>
    Use the form below to change your password. 
</p>
<p>
    New passwords are required to be a minimum of 6 characters in length.
</p>

<form method="post">
    <div asp-validation-summary="ModelOnly">
        <span>Password change was unsuccessful. Please correct the errors and try again.</span>
    </div>
    <div>
        <fieldset>
            <legend>
                Account Information
            </legend>
            <div class="editor-label">
                <label asp-for="OldPassword"></label>
            </div>
            <div class="editor-field">
                <input type="password" asp-for="OldPassword"/>
                <span asp-validation-for="OldPassword"></span>
            </div>

            <div class="editor-label">
                <label asp-for="NewPassword"></label>
            </div>
            <div class="editor-field">
                <input type="password" asp-for="NewPassword" />
                <span asp-validation-for="NewPassword"></span>
            </div>

            <div class="editor-label">
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="editor-field">
                <input type="password" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <p>
                <input type="submit" value="Change Password" />
            </p>
        </fieldset>
    </div>
</form>
