@model LogOnViewModel

@{
    ViewBag.Title = "Log On";
}

<h2>Log On</h2>
<p>
    Please enter your user name and password. <a asp-action="Register">Register</a> if you don't have an account.
</p>

<div asp-validation-summary="All">
    <span>Login was unsuccessful. Please correct the errors and try again.</span>
</div>
<form method="post">
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                <label asp-for="UserName"></label>
            </div>
            <div class="editor-field">
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>

            <div class="editor-label">
                <label asp-for="Password"></label>
            </div>
            <div class="editor-field">
                <input type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="editor-label">
                <input type="checkbox" asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
            </div>

            <p>
                <input type="submit" value="Log On" />
            </p>
        </fieldset>
    </div>
</form>

